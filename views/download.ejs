<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>easyShare | Download File</title>
    <!-- Use same style as main page -->
    <link rel="stylesheet" href="/style.css">
    <script>
        const theme = localStorage.getItem("theme");
        if (theme === "dark") document.documentElement.classList.add("dark-mode");
    </script>
    <style>
        .download-card {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            width: 100%;
            max-width: 500px;
            border-radius: 24px;
            padding: 40px;
            border: 1px solid var(--border-color);
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.15);
            text-align: center;
            margin-top: 50px;
        }

        .download-icon-large {
            width: 100px;
            height: 100px;
            margin-bottom: 24px;
            filter: drop-shadow(0 10px 15px var(--accent-glow));
        }

        .file-info {
            margin-bottom: 30px;
        }

        .file-info h2 {
            font-size: 22px;
            margin-bottom: 8px;
            word-break: break-all;
        }

        .file-info p {
            color: var(--muted-color);
            font-size: 14px;
        }

        .download-btn {
            display: inline-block;
            background: linear-gradient(135deg, var(--primary), #8b5cf6);
            color: white;
            padding: 16px 32px;
            border-radius: 14px;
            text-decoration: none;
            font-weight: 700;
            font-size: 18px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 10px 20px -5px rgba(11, 132, 255, 0.4);
        }

        .download-btn:hover {
            transform: translateY(-3px) scale(1.02);
            box-shadow: 0 15px 30px -5px rgba(11, 132, 255, 0.5);
        }

        .error-container {
            color: #ef4444;
        }
    </style>
</head>

<body class="download-page">

    <div class="site-logo-container">
        <!-- Premium Transparent SVG Logo -->
        <svg class="site-logo-svg" viewBox="0 0 250 60" fill="none" xmlns="http://www.w3.org/2000/svg">
            <defs>
                <linearGradient id="logoGrad" x1="0" y1="0" x2="1" y2="1">
                    <stop offset="0%" stop-color="#0b84ff" />
                    <stop offset="100%" stop-color="#8b5cf6" />
                </linearGradient>
            </defs>
            <rect x="5" y="7" width="46" height="46" rx="14" fill="url(#logoGrad)" />
            <path d="M18 30L28 20L38 30M28 23V40" stroke="white" stroke-width="3.5" stroke-linecap="round"
                stroke-linejoin="round" />
            <text x="65" y="40" fill="currentColor" font-family="'Outfit', sans-serif" font-weight="800"
                font-size="28">easyShare</text>
        </svg>
    </div>

    <div class="theme-toggle" id="themeToggle">
        <span class="icon-sun">‚òÄÔ∏è</span>
        <span class="icon-moon">üåô</span>
    </div>

    <div class="download-card">
        <% if(locals.error){ %>
            <div class="error-container">
                <div class="feature-icon">‚ö†Ô∏è</div>
                <h2>Oops!</h2>
                <p>
                    <%= locals.error %>
                </p>
                <a href="/" class="reload-btn"
                    style="display:inline-block; margin-top:20px; text-decoration:none; color:var(--primary)">Go back
                    home</a>
            </div>
            <% } else { %>
                <img class="download-icon-large" src="/u.svg" alt="Download">

                <div class="file-info">
                    <h2>Your download is ready</h2>
                    <p>Link expires in 24 hours</p>
                    <div
                        style="margin-top: 20px; background: rgba(0,0,0,0.03); padding: 25px; border-radius:18px; border: 1px solid var(--border-color)">
                        <h4 style="margin-bottom: 5px; font-family: 'Outfit', sans-serif;">
                            <%= locals.fileName %>
                        </h4>
                        <small style="color: var(--muted-color); font-weight: 500;">
                            <%= parseInt(locals.fileSize / 1024) %> KB
                        </small>
                    </div>
                </div>

                <a href="/files/download/<%= locals.uuid %>" class="download-btn">Download File</a>
                <% } %>
    </div>

    <script>
        const themeToggle = document.getElementById("themeToggle");
        const body = document.body;

        // Check local storage
        const savedTheme = localStorage.getItem("theme");
        if (savedTheme === "dark") {
            body.classList.add("dark-mode");
        }

        themeToggle.addEventListener("click", () => {
            body.classList.toggle("dark-mode");
            const isDark = body.classList.contains("dark-mode");
            localStorage.setItem("theme", isDark ? "dark" : "light");
        });
    </script>
</body>

</html>